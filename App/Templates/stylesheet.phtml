<?php

$stylesheetDir = scandir(APP_ROOT . '/src');
$stylesheetDir = array_slice($stylesheetDir, 2);

foreach ($stylesheetDir as $blockDir) {
    if ($blockDir == 'img') {
        continue;
    }

    $dir = scandir('src/' . $blockDir);
    $dir = array_slice($dir, 2);

    foreach ($dir as $file) {
        echo "<link href='../../src/$blockDir/$file' rel='stylesheet'>" . PHP_EOL;
    }
}
